<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.Insets?>

<VBox alignment="CENTER" spacing="20" styleClass="login-container" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.chatapp.controller.LoginController">
   <children>
      <VBox alignment="CENTER" spacing="15" styleClass="login-box">
         <children>
            <Text styleClass="app-title" text="Chat Application" />
            <Text styleClass="app-subtitle" text="Connect with friends and colleagues" />
            
            <VBox spacing="10" alignment="CENTER">
               <TextField fx:id="usernameField" promptText="Username" styleClass="input-field" />
               <PasswordField fx:id="passwordField" promptText="Password" styleClass="input-field" />
            </VBox>
            
            <Button fx:id="loginButton" text="Login" styleClass="primary-button" />
            <Button fx:id="registerButton" text="Create Account" styleClass="secondary-button" />
            
            <Label fx:id="statusLabel" styleClass="status-label" />
         </children>
      </VBox>
   </children>
   
   <stylesheets>
      <String fx:value="/css/styles.css" />
   </stylesheets>
</VBox>
